@model IEnumerable<HarrysSMSWeb.Models.Loan>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.LoanNo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Belopp)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FromWhen)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.InterestRate)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
