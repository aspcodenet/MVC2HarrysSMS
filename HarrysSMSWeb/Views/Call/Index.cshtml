@model HarrysSMSWeb.ViewModels.CustomerListViewModel

@{
    ViewBag.Title = "Customers";
}

<h2>Customers</h2>
<p>
    <a asp-action="Create">Create New</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Personnummer</th>
            <th scope="col">Namn</th>
            <th scope="col">Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var order in Model.Customers)
        {
            <tr>
                <th scope="row">@order.Id</th>
                <td>@order.Namn</td>
                <td>@order.PersonNummer</td>
                <td><a asp-action="View" asp-route-id="@order.Id">View</a></td>
            </tr>
        }
    </tbody>
</table>


